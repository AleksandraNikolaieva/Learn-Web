header
    button.menu('[ngClass]'='{"hide": isSearchOpen}' '(click)'='toggleNavMenu()')
        i('[ngClass]'='isNavMenuOpen ? "icon-close" : "icon-menu"')
    div('[ngClass]' = '{"wide":isSearchOpen}')
        a(routerLink='/')
            img(src='../../../assets/images/logo.png', alt='logo')
        .search('[ngClass]'='{"wide":isSearchOpen}')
            input(
                '#forSearch'=''
                placeholder='Search'
                '(keyup.enter)'='doSearch(forSearch.value); forSearch.value = ""'
                '(focus)'='activateSearch()'
                '(blur)'='closeSearch()'
            )
            button('(click)'='doSearch(forSearch.value); forSearch.value = ""')
                i.icon-search
            button.close('*ngIf'='isSearchOpen' '(click)'='closeSearch()')
                i.icon-close
    button.search-icon('*ngIf'='!isSearchOpen' '(click)'='activateSearch()')
        i.icon-search
    a.user-account('*ngIf'='user' routerLink='account' '[ngClass]'='{"hide":isSearchOpen}' '(click)'='toggleUserMenu()')
        span('*ngIf'='user.firstName || user.lastName') {{user.firstName + ' ' + user.lastName}}
        img('*ngIf'='user.picture; else noImage' '[src]'='user.picture', alt='{{user.firstName}}')
        ng-template('#noImage'='')
            .avatar
                span {{initials}}
