app-card
    a(header routerLink='/workshops/{{article.id}}')
        h3 {{article.title}}
    a(content routerLink='/workshops/{{article.id}}')
        img(src='{{article.image}}' alt='{{article.title}}')
        p {{article.description}}
    div(footer)
        .row
            span('*ngIf'='usersMap')
                i.icon-user  {{usersMap[article.author]?.firstName + ' ' + usersMap[article.author]?.lastName}}
            app-timestamp([date]='article.updatedAt' toFormat='day')
        app-like(
            [isActive]='false',
            [likesNumber]='article.reactionsCounts.likes',
            (changeLike)='changeLikeHandler($event)'
        )
        p.tags
            span('*ngFor'='let tag of (article.tags | tagsMap : tagsMap)') {{tag?.name}}
        ng-container('*ngIf'='article.author === loggedUser.id || loggedUser.role === "admin"')
            button('(click)'='deleteArticle(article.id)')
                i.icon-trash
            a('routerLink'='/workshops/{{article.id}}/edit')
                i.icon-pencil