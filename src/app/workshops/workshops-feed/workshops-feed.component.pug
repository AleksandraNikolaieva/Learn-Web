app-viewport
    .tag-group(main)
        app-tag(
            '*ngFor'='let tagItem of tags$ | async'
            '[tag]'='tagItem'
            '(changeActive)'='activateTag($event)'
            )
        button('(click)'='resetTags()')
            i.icon-close
    .categories(main)
        a('*ngFor'='let category of categories'
           '[ngClass]'='{"active": category.title === activeCategory}'
           '(click)'='activateCategory(category)'
        ) {{category.title}}
    .workshop-feed-content(main)
        span('*ngIf'='!(articles$ | async)?.length') Required articles do not exist
        app-article(
            '*ngFor'='let articleItem of articles$ | async; trackBy: trackByFunction'
            '[article]'='articleItem'
            '[tagsMap]'='tagsEntities$ | async'
            '[usersMap]'='usersEntities$ | async'
            '[@enterLeaveHeight]'='true'
        )

