label('*ngIf'='label' '[for]'='id') {{label}}
span('*ngIf'='isMultiple') (Hold down the Ctrl/Command button to select multiple options)
select(
    '[id]'='id'
    '[(ngModel)]'='value'
    '(ngModelChange)'='onChange(value)'
    '[multiple]'='isMultiple'
    '[size]'='size'
)
    option('value'='' disabled selected hidden) {{placeholder}}
    ng-container('*ngIf'='!toShow; else forObject')
        option('*ngFor'='let option of options' '[ngValue]'='option') {{option}}
    ng-template(#forObject='')
        option('*ngFor'='let option of options' '[ngValue]'='option[toGet]' '[label]'='option[toShow] | lowercase')

